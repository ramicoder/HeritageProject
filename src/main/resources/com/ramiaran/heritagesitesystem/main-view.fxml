<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<!-- This represents the body of our GUI -->
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ramiaran.heritagesitesystem.HeritageController"
            prefHeight="720.0" prefWidth="1080.0">
    <!-- the top region of the screen -->
    <top>
        <!-- a horizontal box similar to row flex in html -->
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="UKH Heritage Management System" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="22.0"/>
                </font>
            </Label>
        </HBox>
    </top>
    <!-- left region of the screen -->
    <left>
        <!-- a vertical box similar to column flex in html -->
        <VBox spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-width: 0 1 0 0;" prefWidth="300.0">
            <Label text="SCHEDULE VISIT" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <Separator/>

            <Label text="Visitor Details"/>
            <!-- text and date input fields -->
            <TextField fx:id="nameField" promptText="Full Name"/>
            <TextField fx:id="idField" promptText="Visitor ID"/>
            <TextField fx:id="phoneField" promptText="Phone Number"/>
            <DatePicker fx:id="datePicker" maxWidth="Infinity" promptText="Select Date"/>

            <Separator/>

            <Label text="Site Selection"/>
            <!-- comboboxes are like selection dropdown menu -->
            <ComboBox fx:id="categoryBox" maxWidth="Infinity" promptText="1. Select Category"/>
            <ComboBox fx:id="siteBox" maxWidth="Infinity" promptText="2. Select Site"/>

            <Separator/>
            <!-- these are buttons that should handle some logic when clicked -->
            <Button text="Schedule Visit (Option 2)" onAction="#onScheduleClick"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white;" maxWidth="Infinity"/>

            <Button text="Cancel Visit (Option 3)" onAction="#onCancelClick"
                    style="-fx-background-color: #e67e22; -fx-text-fill: white;" maxWidth="Infinity"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Separator/>
            <Button text="EXIT SYSTEM (Option 0)" onAction="#onExitClick"
                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold;" maxWidth="Infinity"/>
        </VBox>
    </left>
    <!-- central region of the screen -->
    <center>
        <SplitPane dividerPositions="0.65">
            <VBox spacing="10" style="-fx-padding: 15;">
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #dfe6e9; -fx-padding: 10;">
                    <Label text="Search:"/>
                    <TextField fx:id="searchField" promptText="Enter ID" HBox.hgrow="ALWAYS"/>
                    <Button text="Search (Opt 6)" onAction="#onSearchClick"/>
                </HBox>

                <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colName" text="Name"/>
                        <TableColumn fx:id="colSite" text="Site"/>
                        <TableColumn fx:id="colCategory" text="Category"/>
                        <TableColumn fx:id="colDate" text="Date"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5;">
                    <Label text="Filter:"/>
                    <ComboBox fx:id="viewCategoryBox" prefWidth="120"/>
                    <CheckBox fx:id="ascendingCheck" text="Asc"/>
                    <Button text="View List (Opt 4)" onAction="#onViewVisitsClick"/>
                </HBox>
            </VBox>

            <VBox spacing="15" style="-fx-padding: 15; -fx-background-color: #f5f6fa;">
                <Label text="SYSTEM REPORTS" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <Button text="Recent Bookings (Opt 7)" onAction="#onRecentClick" maxWidth="Infinity"/>
                <Button text="System Totals (Opt 5)" onAction="#onTotalsClick" maxWidth="Infinity"/>
                <Button text="Summary Report (Opt 8)" onAction="#onSummaryClick" maxWidth="Infinity"/>

                <Separator/>

                <Label text="System Log:"/>
                <TextArea fx:id="feedbackArea" VBox.vgrow="ALWAYS" editable="false"
                          style="-fx-font-family: 'Consolas'; -fx-font-size: 13;" wrapText="true"/>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>